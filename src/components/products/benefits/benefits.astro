---
import "./benefits.css";
import Benefit from "../../ui/Benefit/benefit.astro";

const {
  // title = "",
  items = [],
} = Astro.props;

// Cap the grid to 3 columns, but avoid empty columns when fewer items exist.
const cols = Math.max(1, Math.min(6, items.length || 1));

---

<section class="section-benefits">
    <div class="benefits-card">
      <div class="benefits-content" style={`--benefits-cols: ${cols};`}>
        {items.map((benefit) => (
          <Benefit
            icon={benefit.icon}
            title={benefit.title}
            description={benefit.description}
          />

        ))}
      </div>
    </div>
  </div>
</section>