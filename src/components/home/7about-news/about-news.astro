---
/* src/components/home/7-about-news/about-news.astro */
import "./about-news.css";

// Receive props from index.astro
const { 
  aboutTitle, 
  aboutDesc, 
  aboutCta, 
  newsTitle, 
  newsDesc, 
  newsCta,
  links // This contains your hardcoded URLs
} = Astro.props;

const cards = [
  {
    title: aboutTitle,
    description: aboutDesc,
    ctaLabel: aboutCta,
    href: links?.aboutHref || "#", // Use link from index.astro
  },
  {
    title: newsTitle,
    description: newsDesc,
    ctaLabel: newsCta,
    href: links?.newsHref || "#", // Use link from index.astro
  },
];
---

<section class="section-about-news">
  <div class="page-inner about-news-grid">
    {cards.map((card) => (
      <div class="about-news-card">
        <h4 class="h4">{card.title}</h4>
        <div class="about-news-body body-m">
          <p>{card.description}</p>
        </div>
        <a class="btn-tertiary button-l about-news-cta" href={card.href}>
          {card.ctaLabel}
        </a>
      </div>
    ))}
  </div>
</section>