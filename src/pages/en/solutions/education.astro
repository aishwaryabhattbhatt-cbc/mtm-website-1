---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import Navbar from "../../../components/ui/NavBar/nav-bar.astro";
import Grid from '../../../components/ui/Grid/grid.astro';
import HighlightText from '../../../components/ui/HighlightText/highlight-text.astro';
import Footer from "../../../components/ui/Footer/footer.astro";
import Subscribe from '../../../components/ui/Subscribe/subscribe.astro';
import CTA from "../../../components/ui/CTA/CTA.astro";
import Faq from "../../../components/solutions/faq/faq.astro";
import Testimonials from "../../../components/solutions/testimonials/testimonials.astro";
import Hero from "../../../components/solutions/hero/Hero.astro";

const heroScene = {
  orbits: [
    { radius: 190, delay: 1 },
    { radius: 260, delay: 1.5 },
    { radius: 330, delay: 2 },
  ],
  image: "/mtm-website-1/images/solutions/education/hero-solution-education.webp",
  maskImage: "/mtm-website-1/images/solutions/education/hero-solution-education-mask.webp",
  orbitBlocker: "/mtm-website-1/images/solutions/hero-solution-white-blocker.png",
  particles: "/mtm-website-1/dots.png",
  centerOffset: { x: 0, y: 0 },

  icons: [
    {
      file: "/mtm-website-1/icons/Artboard 1.svg",
      orbit: 0, angle: 320, tooltip: "Audio Behavior"
    },
    {
      file: "/mtm-website-1/icons/Artboard 2.svg",
      orbit: 1, angle: 210, tooltip: "Video Viewing"
    },
    {
      file: "/mtm-website-1/icons/Artboard 3.svg",
      orbit: 2, angle: 170, tooltip: "Analytics"
    },
    {
      file: "/mtm-website-1/icons/Artboard 4.svg",
      orbit: 2, angle: 350, tooltip: "Mobile Usage"
    }
  ]
};

const heroContent = {
solution: "Education",
titleHighlight: "Empower",
titleBase: "students with real media insights",
subtitle:
  "MTM gives universities and students access to Canada’s most comprehensive media datasets, helping them explore audience behaviour, build research projects, and apply real data to classroom learning.",
};

const advertisingTestimonials = {
  title: "What educators say about us",
    subtitle: "Faculty and researchers use MTM data to enrich classroom learning, support academic studies.",
    clientLogos: ["/mtm-website-1/client-logos/education.svg"],
    items: [
      { quote: "Integrating MTM data into our curriculum has transformed how students approach media research. Instead of analyzing outdated case studies, they now work with current, nationally representative data. It bridges the gap between theory and practice and gives our students a competitive edge.",
        role: "Role, Org" }
  ],
};

const advertisingFAQs = [
  {
    question: "How can MTM data support my next campaign pitch?",
    answer:
      "MTM helps you validate audience assumptions with data sourced from over 12,000 Canadians annually. Use insights from our DAT and Trending Tools to strengthen your recommendations and back your media plans with credible, defensible numbers.",
  },
  {
    question: "Can I compare audience behaviour across different age groups or regions?",
    answer:
      "Yes. The DAT Tool lets you segment data by age, gender, region, and language. You can quickly visualize patterns across MTM 18+, Junior, and Newcomer datasets to tailor your strategy for each target audience.",
  },
  {
    question: "How often is MTM data updated?",
    answer:
      "MTM releases new reports and dataset updates twice a year — with additional insights and trend analyses published regularly. This ensures your campaigns are informed by the most current media consumption data in Canada.",
  },
  {
    question: "Can I export charts or visuals for my client presentations?",
    answer:
      "Absolutely. You can download charts, graphs, and visual summaries directly from the DAT Tool to include in your decks, ensuring every recommendation you make is supported by real Canadian data.",
  },
  {
    question: "Do you provide support for custom audience or brand-specific insights?",
    answer:
      "Yes. Our team can guide you through advanced queries or customized data views during your demo session. Many agencies use this to tailor MTM data for specific client sectors or campaign objectives.",
  },
];

---

<BaseLayout title="MTM | Solutions for Education">
  <HighlightText />
  <Grid />
  <Navbar />

  <main class="page">
    <Hero 
      solution={heroContent.solution}
      titleHighlight={heroContent.titleHighlight}
      titleBase={heroContent.titleBase}
      subtitle={heroContent.subtitle}
      scene={heroScene} />
    <Testimonials
      title={advertisingTestimonials.title}
      subtitle={advertisingTestimonials.subtitle}
      clientLogos={advertisingTestimonials.clientLogos}
      items={advertisingTestimonials.items}
    />
    <Faq
      title="Frequently Asked Questions"
      items={advertisingFAQs}
    />
    <CTA />
    <Subscribe />
    <Footer />
  </main>

  
</BaseLayout>